{
  "explorer.file.showHiddenFiles": true,
  "markdownlint.config": { "line-length": false },
  "languageserver": {
    "ocaml-lsp": {
      "command": "opam",
      "args": ["config", "exec", "--", "ocamllsp"],
      "filetypes": ["ocaml", "reason"]
    }
  },
  "eslint.experimental.useFlatConfig": true,
  "eslint.autoFixOnSave": true,
}
